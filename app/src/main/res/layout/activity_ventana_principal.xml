<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityVentanaPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5
">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagen_usuario_ventana_principal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="5dp"
            android:src="@drawable/svg_circular_usuario"
            app:shapeAppearanceOverlay="@style/imagenConBordeCircular"></com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="¿Qué deseas hacer?"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            ></TextView>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_entrada"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="62.5dp"
                    android:layout_margin="10dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            >
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/svg_entrada"
                                android:layout_gravity="center_horizontal"
                                ></ImageView>
                        </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrada"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_salida"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="62.5dp"
                    android:layout_margin="10dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/svg_salida"
                            android:layout_gravity="center_horizontal"
                            ></ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salida"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="fill"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_inventario"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="62.5dp"
                    android:layout_margin="10dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/svg_inventario"
                            android:layout_gravity="center_horizontal"
                            ></ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inventario"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="fill"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_kardex"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="62.5dp"
                    android:layout_margin="10dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/svg_kardex"
                            android:layout_gravity="center_horizontal"
                            ></ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KARDEX"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="2"
                android:layout_rowWeight="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_parametros"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="62.5dp"
                    android:layout_margin="10dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/svg_parametros"
                            android:layout_gravity="center_horizontal"
                            ></ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parámetros"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

        </GridLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>